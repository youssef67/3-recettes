{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block monTitre %}Liste des aliments / Admninistrateur{% endblock %}
{% block body %}
<a class="btn btn-success text-white m-2" href="{{ path("alimentsParCalorie", {'calorie' : 50}) }}">Ajouter</a>
<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <th scope="col">Image</th>
            <th scope="col">Aliment</th>
            <th scope="col">Prix</th>
            <th scope="col">Calorie</th>
            <th scope="col">Proteine</th>
            <th scope="col">Glucide</th>
            <th scope="col">Lipides</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for aliment in aliments %}
        <tr>
            <td><img src="{{ asset("images/" ~ aliment.image) }}" alt="" style="height: 100px; width: 100px;"></td>
            <td>{{ aliment.nom }}</td>
            <td>{{ aliment.prix }}</td>
            <td>{{ aliment.calorie }}</td>
            <td>{{ aliment.proteine }}</td>
            <td>{{ aliment.glucide }}</td>
            <td>{{ aliment.lipide }}</td>
            <td>
                <a href="{{ path("adminAliments_Modification", {"id" : aliment.id })}}" class="btn btn-secondary">Modifier</a>
                <a href="" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}